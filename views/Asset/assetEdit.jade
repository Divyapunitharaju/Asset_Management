doctype html
html
  head
    title Add Asset
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
  body
    .container
      h1 Edit Asset
      form#addAssetForm 
        input#assetId(type="hidden" value=asset.id)  
        .mb-3
          input#serialNo.form-control(type="text" name="serialNo" value=asset.serialNo )
        .mb-3
          input#name.form-control(type="text" name="name" value=asset.name )
        .mb-3
          input#model.form-control(type="text" name="model" value=asset.model)
        .mb-3
          input#make.form-control(type="text" name="make" value=asset.make)
        .mb-3 
          select#status.form-control(name="status") 
            option(value='Available' selected=asset.value === 'Available' ) Available
            option(value='Issued' selected=asset.value === "Issued") Issued
            option(value='Obsolete' seelcted=asset.value === "Obsolete") Obsolete
        .mb-3
          input#branch.form-control(type="text" name="branch" value=asset.branch)
        .mb-3
          input#value.form-control(type="number" name="value" value=asset.value)
        button#submitBtn.btn.btn-primary(type="submit") Submit
        
    script.
      const form = document.getElementById('addAssetForm');
      const submitBtn = document.getElementById('submitBtn');

      form.addEventListener('submit', async (e) => {
        e.preventDefault()
        const serialNo = document.getElementById('serialNo').value.trim();
        const name = document.getElementById('name').value.trim();
        const model = document.getElementById('model').value.trim()
        const make = document.getElementById('make').value.trim();
        const status = document.getElementById('status').value
        const branch = document.getElementById('branch').value.trim()
        const value = document.getElementById('value').value.trim()
        const assetId = document.getElementById('assetId').value;


        const assetData = { serialNo,name,model,make,status,branch,value };
        try {
          const response = await fetch(`http://localhost:3000/assets/${assetId}`, {
            method: "PUT",
            headers: {
              "Content-Type": "application/json"
            },
            body: JSON.stringify(assetData)
          })

          if (response.ok) {
            const result = await response.json();
            console.log(result)
            alert(result.message);
            form.reset()
          } else {
            const error = await response.json();
            alert("Error: " + error.message);
          }
        } catch (err) {
          console.error(err);
          alert("An unexpected error occurred");
        }
      })
