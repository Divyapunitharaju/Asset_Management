doctype html
html 
    head 
        title Login
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
    body 
        .container.m-5
            h2.text-center Login
            if error
                .alert.alert-danger #{error}
            if success
                .alert.alert-success #{success}

            form.form.m-auto(action="/user/login" method="POST")
                .form-group
                    label(for="email") Email 
                    input#email.form-control(type="email" name='email' required=true)
                .form-group
                    label(for="password") Password
                    input#password.form-control(type="password" name='password' required=true)
                button.btn.btn-primary(type="submit") Login
            br
            p Don't have an account? <a(href='/user/signup') Signup here</a>
