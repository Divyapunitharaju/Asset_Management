html
  head
    title Stock Summary
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    link(rel="stylesheet", href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css")
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    script(src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js")

  body
    h3.text-center.m-4 STOCK
    .container.my-5
      table#stock.table.table-striped
        thead
          tr
            th Branch
            th Asset_Type
            th Total Assets
            th Totals
        tbody
          each branch in stock
            tr
              td= branch.branch
              td= branch.name
              td= branch.total_assets
              td= branch.total_value
        tfoot
          tr
            td(colspan="3") Total Value 
            td= totalValue

    script.
      $(document).ready(function () {
        $('#stock').DataTable();
      });
